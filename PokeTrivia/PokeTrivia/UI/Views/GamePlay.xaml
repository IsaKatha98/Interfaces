<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PokeTrivia.UI.Views.GamePlay"
             xmlns:model="clr-namespace:PokeTrivia.UI.VM"
             Title="GamePlay">
    <ContentPage.BindingContext>
        <model:GamePlayVM/>
    </ContentPage.BindingContext>
    <VerticalStackLayout HorizontalOptions="Center">

        <Image Source="pokelogo.png" HorizontalOptions="Center"/>
        <Label Text="{Binding PlayerName}"/>

        <Label Text="{Binding Question.Question}"/>

        <Button Text="{Binding Answer1}" Command="{Binding ConfirmsAnswer }"/>
        <Button Text="{Binding Answer2}" Command="{Binding ConfirmsAnswer }"/>
        <Button Text="{Binding Answer3}" Command="{Binding ConfirmsAnswer }"/>
        <Button Text="{Binding Answer4}" Command="{Binding ConfirmsAnswer }"/>

    </VerticalStackLayout>
</ContentPage>