<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PokeTrivia.UI.Views.GamePlay"
            
             Title="GamePlay">
    <ScrollView>
        <VerticalStackLayout HorizontalOptions="Center">

            <Image Source="{Binding Question.Img}" MaximumWidthRequest="200" MaximumHeightRequest="200" HorizontalOptions="Center"/>
            <Label Text="{Binding PlayerName}"/>
            <Label Text="{Binding CountWins}"/>

            <Label Text="{Binding Question.Question}"/>



            <Button Text="{Binding Answer1.Answer}" TextColor="white"  Command="{Binding ConfirmsAnswer }" CommandParameter="{Binding Answer1}"/>
            <Button Text="{Binding Answer2.Answer}" TextColor="White"  Command="{Binding ConfirmsAnswer }" CommandParameter="{Binding Answer2}"/>
            <Button Text="{Binding Answer3.Answer}" TextColor="white"  Command="{Binding ConfirmsAnswer }" CommandParameter="{Binding Answer3}"/>
            <Button Text="{Binding Answer4.Answer}" TextColor="White"  Command="{Binding ConfirmsAnswer }" CommandParameter="{Binding Answer4}"/>

        </VerticalStackLayout>
    </ScrollView>
   
</ContentPage>