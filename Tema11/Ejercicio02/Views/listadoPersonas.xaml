<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:Ejercicio02.Viewmodels"
             x:Class="Ejercicio02.Views.listadoPersonas"
             Title="Listado de Personas">

    <ContentPage.BindingContext>
        <model:listadoPersonasVM/>
    </ContentPage.BindingContext>

    <ScrollView>

        <VerticalStackLayout>

            <HorizontalStackLayout  Margin="30" HorizontalOptions="Center">

                <Button Command="{Binding CrearCommand}" HorizontalOptions="Start"
            Text="Crear"
            WidthRequest="100" Margin="0,0,200,0"/>

                <Entry WidthRequest="200" HorizontalOptions="End"
Text="{Binding TextoBusqueda}"
Placeholder="BÃºsqueda" />


                <Button Command="{Binding BuscarCommand}" HorizontalOptions="End"
 Text="Buscar"
 WidthRequest="100" />

            </HorizontalStackLayout>

            <VerticalStackLayout>
                <HorizontalStackLayout HorizontalOptions="Center" >
                    <Label Text="Nombre y Apellidos" FontAttributes="Bold" Margin="0,0,10,0" />
                    <Label Text="Departamento" FontAttributes="Bold" />
                </HorizontalStackLayout>

                <ListView x:Name="listDepartamentosLW" HorizontalOptions="Center"
                      ItemsSource="{Binding ListaNombreDept}" SelectedItem="{Binding PersonaSeleccionada}" Margin="15">

                    <ListView.ItemTemplate>

                        <DataTemplate>
                            <ViewCell>
                                <HorizontalStackLayout HorizontalOptions="Center" Margin="5">



                                    <Label Text="{Binding Nombre}" />
                                    <Label Text="{Binding Apellidos}" />

                                    <Label Text="{Binding NombreDepartamento}"  Margin="15,0,0,0"/>


                                </HorizontalStackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>

                </ListView>


            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>