<?xml version="1.0" encoding="utf-8" ?>

<!--El xmlns:local con el namespace es tela de importante-->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Ejercicio02.Models"
             x:Class="Ejercicio02.Views.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Entry Placeholder="{Binding Nombre, Mode=TwoWay}"
                   HorizontalOptions="CenterAndExpand"
                   WidthRequest="100"
                  
                  />

            <Label x:Name="labelNombre"
                   Text="{Binding Nombre}"
                   HorizontalOptions="Center"/>

            <Entry Placeholder="{Binding Apellidos, Mode=TwoWay}"
                    HorizontalOptions="CenterAndExpand"
                     WidthRequest="100"
                    />

            <Label x:Name="labelApellidos"
                    Text="{Binding Apellidos}"
                    HorizontalOptions="Center"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
